# Example S3 remote state backend configuration.
# Copy this file to your tier directory and rename to backend.tf.
# Replace the placeholder values with your actual S3 bucket and DynamoDB table.

terraform {
  backend "s3" {
    bucket         = "your-terraform-state-bucket"
    key            = "tier-1-ec2/terraform.tfstate"
    region         = "us-east-1"
    encrypt        = true
    dynamodb_table = "terraform-state-lock"
  }
}
